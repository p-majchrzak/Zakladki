<Window x:Class="Zakladki.StronaGlowna"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zakladki"
        mc:Ignorable="d"
        Title="StronaGlowna" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button Content="Dodaj Książke"></Button>
            <ListView>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="Tytul: "></TextBlock>
                            <TextBlock Text="Opis: "></TextBlock>
                            <TextBlock Text="Autor: "></TextBlock>
                            <Button Content="Usun" Width="200"></Button>
                            <Button Content="Bookmarks" Width="200"></Button>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>

    </Grid>
</Window>
